---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import { SITE_TITLE } from "../config";
import { getEntry } from "astro:content";
import dayjs from "dayjs";

const resp = await getEntry("feeds", "home");
console.log({ resp });

const { entries, collection } = resp.data;
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} `} slot="meta" />
  <Fragment slot="main">
    <Intro collection={collection} />

    <section>
      <ul>
        {
          entries.map((post: any) => {
            const formattedDate = new Date(
              dayjs(post.updatedAt).toISOString()
            ).toLocaleDateString("en-us", {
              year: "numeric",
              month: "short",
              day: "numeric",
            });
            return (
              <li class="grid grid-cols-[1fr] md:grid-cols-[1fr_auto] mb-3 md:gap-2 items-start">
                <div class="title">
                  {post.external ? (
                    <a
                      href={post.url}
                      target="_blank"
                      class="unset hover:text-text-link"
                    >
                      <span>{post.title}</span>
                      <span>
                        <i class="ml-1 mr-1 text-[12px] pb-2 fa-solid fa-up-right-from-square pt-1" />
                      </span>
                    </a>
                  ) : (
                    <a
                      href={post.link}
                      target="_blank"
                      class="unset hover:text-text-link"
                    >
                      {post.title}
                    </a>
                  )}
                </div>
                <div class="text-text-muted text-sm italic">
                  <time datetime={dayjs(post.updatedAt).toISOString()}>
                    {formattedDate}
                  </time>
                </div>
              </li>
            );
          })
        }
      </ul>
    </section>
  </Fragment>
</PageLayout>
