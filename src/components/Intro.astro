---
import { feeds } from "../config";

const { collection, id } = Astro.props;
console.log({ id, collection });
---

<section class="mt-4">
  <div>
    <div class="my-1 gap-2 flex flex-wrap">
      <a
        class={id == "home" ? "highlight" : ""}
        href={import.meta.env.BASE_URL}
      >
        Home
      </a>
      {
        feeds.map((feed) => {
          return (
            <a
              href={`${import.meta.env.BASE_URL == "/" ? "" : import.meta.env.BASE_URL}/feed/${feed.key}`}
              class={id == feed.key ? "highlight" : ""}
            >
              {feed.title}
            </a>
          );
        })
      }
    </div>

    <h1 class="font-bold">{collection}</h1>
  </div>
</section>
